<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/movieFrag">

    <fragment
        android:id="@+id/seriesFrag"
        android:name="com.carolmusyoka.movieapp.popular.SeriesFragment"
        android:label="Series Fragment"
        tools:layout="@layout/fragment_series">
        <action
            android:id="@+id/action_notesFragment_to_addNotesFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_notesFragment_to_notesDetailsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/movieFrag"
        android:name="com.carolmusyoka.movieapp.popular.movies.view.MoviesFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_movies">
    </fragment>

</navigation>